{
  "name": "@dyoshikawa/mentor-php-env",
  "version": "0.1.0",
  "description": "Prepare local Laravel development env for mentors.",
  "main": "dist/index.js",
  "bin": {
    "mentor-php-env": "dist/index.js"
  },
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run prepare",
    "prepublish": "npm run build",
    "version:new": "npm version ${VERSION} && npm i",
    "build": "esbuild src/index.ts --bundle --minify --platform=node --target=node14 --outfile=dist/index.js",
    "start": "npm run build && node dist/index.js",
    "start:er": "node --require esbuild-register src/index.ts",
    "lint": "secretlint '**/*' && prettier -c ./**/*.ts && eslint --cache ./**/*.ts",
    "lint:fix": "secretlint '**/*' && prettier --write ./**/*.ts && eslint --cache --fix ./**/*.ts",
    "typec": "tsc --noEmit",
    "check": "npm run lint && npm run typec"
  },
  "author": "dyoshikawa",
  "license": "MIT",
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "4.1.4",
    "@tsconfig/recommended": "1.0.1",
    "@types/commander": "2.12.2",
    "@types/node": "16.11.6",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "esbuild": "0.13.11",
    "esbuild-register": "3.0.0",
    "eslint": "8.7.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "lint-staged": "12.2.2",
    "prettier": "2.4.1",
    "secretlint": "4.1.4",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "commander": "8.3.0"
  },
  "volta": {
    "node": "16.13.2",
    "npm": "8.3.2"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "bash -c 'npm run lint:fix'",
      "bash -c 'npm run typec'"
    ]
  },
  "homepage": "https://github.com/dyoshikawa/mentor-php-env#readme",
  "repository": {
    "url": "https://github.com/dyoshikawa/mentor-php-env"
  },
  "bugs": {
    "url": "https://github.com/dyoshikawa/mentor-php-env/issues"
  }
}
